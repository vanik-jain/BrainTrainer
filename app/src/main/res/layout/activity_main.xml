<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout


    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"



    >

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="GO!"
        android:textSize="80dp"
        android:padding="40dp"
        android:background="@color/colorAccent"
        android:id="@+id/appStart"
        android:onClick="appStart"


        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0:30"
        android:textSize="30dp"
        android:background="#CE1620"
        android:padding="15dp"
        android:id="@+id/timerTextView"
        android:visibility="invisible"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0/0"
        android:textSize="30dp"
        android:layout_alignParentRight="true"
        android:background="#50C878"
        android:padding="15dp"
        android:id="@+id/scoreTextView"
        android:visibility="invisible"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        android:padding="15dp"
        android:textColor="#011127"
        android:id="@+id/questionTextView"
        android:visibility="invisible"/>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/questionTextView"
        android:layout_marginTop="20dp"
        android:id="@+id/grid"
        android:visibility="invisible"
        >

        <Button

            android:layout_height="150dp"
            android:layout_width="180dp"
            android:layout_column="0"
            android:layout_row="0"
            android:tag="0"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:textSize="80sp"
            android:layout_gravity="fill"
            android:padding="20sp"
            android:id="@+id/button0"
            android:background="#042c62"
            android:onClick="answerClicked"

            />


        <Button

            android:layout_height="150dp"
            android:layout_width="180dp"
            android:layout_column="1"
            android:layout_row="0"
            android:tag="1"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:textSize="80sp"
            android:padding="20sp"
            android:layout_gravity="fill"
            android:background="#FF8C00"
            android:id="@+id/button1"
            android:onClick="answerClicked"

            />

        <Button
            android:layout_height="150dp"
            android:layout_width="180dp"
            android:layout_column="0"
            android:layout_row="1"
            android:tag="2"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"
            android:textSize="80sp"
            android:id="@+id/button2"
            android:background="#FFDF00"
            android:padding="20sp"
            android:onClick="answerClicked"
            />

        <Button
            android:layout_height="150dp"
            android:layout_width="180dp"
            android:layout_column="1"
            android:layout_row="1"
            android:tag="3"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:textSize="80sp"
            android:layout_gravity="fill"
            android:id="@+id/button3"
            android:onClick="answerClicked"
            android:padding="20sp"
            android:background="#E30B5D"

            />

    </GridLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/grid"
        android:id="@+id/messageTextView"
        android:layout_centerHorizontal="true"
        android:textSize="50dp"
        android:padding="20dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/messageTextView1"
        android:textColor="#011127"
        android:layout_below="@id/questionTextView"
        android:textSize="40dp"
        android:padding="20dp"
        android:layout_centerInParent="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/messageTextView1"
        android:layout_centerHorizontal="true"
        android:id="@+id/messageTextView2"
        android:textColor="#011127"

        android:textSize="40dp"
        android:padding="20dp"

        />
</RelativeLayout>
